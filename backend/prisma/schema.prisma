// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Exercise {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now())
  endedAt   DateTime?

  isDeadLift Boolean

  series Series[]
}

model Series {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now())
  endedAt   DateTime?

  exerciseId  Int
  repetitions Repetition[]

  exercise Exercise @relation(fields: [exerciseId], references: [id])
}

model Repetition {
  id Int @id @default(autoincrement())

  createdAt       DateTime  @default(now())
  peakedReachedAt DateTime?
  endedAt         DateTime?

  seriesId Int

  peakRepetitionEntry RepetitionEntry? @relation("peakRepetitionEntry")
  endRepetitionEntry RepetitionEntry? @relation("endRepetitionEntry")
  repetitionEntries RepetitionEntry[] @relation("repetitionEntries")

  series Series @relation(fields: [seriesId], references: [id])
}

model RepetitionEntry {
  id Int @id @default(autoincrement())

  timestamp DateTime
  value Int

  peakRepetitionId Int? @unique
  endRepetitionId Int? @unique
  repetitionId Int?

  peakRepetition Repetition? @relation("peakRepetitionEntry", fields: [peakRepetitionId], references: [id])
  endRepetition Repetition? @relation("endRepetitionEntry", fields: [endRepetitionId], references: [id])
  repetition Repetition? @relation("repetitionEntries", fields: [repetitionId], references: [id])
}
